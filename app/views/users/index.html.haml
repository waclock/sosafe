%h1 Listing users

%table.table
  %tr
    %th Name
    %th Email

  - @users.each do |user|
    %tr
      %td= user.first_name
      %td= user.last_name
      %td= user.email
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to ' New User', new_user_path, :class => 'btn btn-success btn-lg icon-plus'
